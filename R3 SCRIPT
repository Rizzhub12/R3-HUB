local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local ScriptButton = Instance.new("TextButton")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
MainFrame.Position = UDim2.new(0.5, -75, 0.5, -50)
MainFrame.Size = UDim2.new(0, 150, 0, 100)

ScriptButton.Parent = MainFrame
ScriptButton.BackgroundColor3 = Color3.fromRGB(65, 128, 244)
ScriptButton.Position = UDim2.new(0.5, -50, 0, 10)
ScriptButton.Size = UDim2.new(0, 100, 0, 30)
ScriptButton.Font = Enum.Font.SourceSans
ScriptButton.Text = "SCRIPT"
ScriptButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ScriptButton.TextSize = 14

local ScriptFrame = Instance.new("Frame")
local AIMBOT = Instance.new("TextButton")

ScriptFrame.Parent = MainFrame
ScriptFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
ScriptFrame.Position = UDim2.new(1, 5, 0, 0)
ScriptFrame.Size = UDim2.new(0, 150, 0, 100)
ScriptFrame.Visible = false

AIMBOT.Parent = ScriptFrame
AIMBOT.BackgroundColor3 = Color3.fromRGB(65, 128, 244)
AIMBOT.Position = UDim2.new(0.5, -50, 0, 50)
AIMBOT.Size = UDim2.new(0, 100, 0, 30)
AIMBOT.Font = Enum.Font.SourceSans
AIMBOT.Text = "AIMBOT"
AIMBOT.TextColor3 = Color3.fromRGB(255, 255, 255)
AIMBOT.TextSize = 14

ScriptButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    ScriptFrame.Visible = true
end)

AIMBOT.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/TirSANX/CrimsonHUB/main/C_Loader'))()
end
